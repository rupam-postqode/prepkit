# Environment variables declared in this file are NOT automatically loaded by Prisma.
# Please add `import "dotenv/config";` to your `prisma.config.ts` file, or use the Prisma CLI with Bun
# to load environment variables from .env files: https://pris.ly/prisma-config-env-vars.

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# Database Connection
# For local development: postgresql://username:password@localhost:5432/prepkit
# For production: Use a managed database like Neon, Supabase, or PlanetScale
DATABASE_URL=""

# NextAuth Configuration
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET=""
NEXTAUTH_URL="http://localhost:3000"

# Stripe Payment Integration
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Cloudinary File Upload
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Optional: Analytics (Google Analytics)
NEXT_PUBLIC_GA_ID=""

# Optional: Error Tracking (Sentry)
NEXT_PUBLIC_SENTRY_DSN=""

# Optional: Email Service (Resend)
RESEND_API_KEY=""

# Content Protection
# Generate a secure 32-character key: openssl rand -hex 32
CONTENT_ENCRYPTION_KEY=""

# CSRF Protection
# Generate a secure secret: openssl rand -base64 32
CSRF_SECRET=""
